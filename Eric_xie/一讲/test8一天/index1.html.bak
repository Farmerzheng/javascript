        var img=createGoodsIconImg(obj.imgSrc);
        img.arr=arr;
        div.appendChild(img);
        arr.push(img);
        listArr.push(arr);
    }
    
    function createCheckBox() {
        var check=document.createElement("input");
        check.type="checkbox";
        check.style.width="100px";
        check.style.height="100px";
        check.style.position="absolute";
        return check;
    }

    function createGoodsIconImg(iconSrc) {
        var img=new Image();
        img.addEventListener("load",loadHandler)
        img.src=iconSrc;
        img.style.position="absolute";

        return img
    }

    function createGoodsDiv(type,text,style) {
        var div=document.createElement(type);
        if(type=="input"){
            div.value=text;
        }else{
            div.textContent=text;
        }
        div.className=style;
        return div;
    }
    
    function setElementPosition(element,targetElem,left,top) {
        if(left){
            element.style.left=(targetElem.offsetLeft+targetElem.offsetWidth+left)+"px";
        }else if(left==0){
            element.style.left=(targetElem.offsetLeft)+"px";
        }
        if(top){
             element.style.top=(targetElem.offsetTop+targetElem.offsetHeight+top)+"px";
        }else if(top==0){
            element.style.top=(targetElem.offsetTop)+"px";
        }
    }
    function loadHandler(e) {
        if(!e){
            e=window.event;
        }
        this.removeEventListener("load",loadHandler);
        this.style.top=(348-this.height)/2+"px";
