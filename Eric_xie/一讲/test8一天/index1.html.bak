        setElementPosition(this.arr[1],this.arr[9],80);
        setElementPosition(this.arr[2],this.arr[1],0,5);
        setElementPosition(this.arr[3],this.arr[2],5,0);
        setElementPosition(this.arr[4],this.arr[3],5,0);
        setElementPosition(this.arr[5],this.arr[2],0,40);
        setElementPosition(this.arr[6],this.arr[5],100,0);
        setElementPosition(this.arr[8],this.arr[6],1,0);
